<ul id="filters">
  <li>
    {{#link-to "todos.index" activeClass="selected"}}All{{/link-to}}
  </li>
  <li>
    {{#link-to "todos.active" activeClass="selected"}}Active{{/link-to}}
  </li>
  <li>
    {{#link-to "todos.completed" activeClass="selected"}}Completed{{/link-to}}
  </li>
  <li>
      {{ input type="checkbox" id="toggle-all" checked=allAreDone }}
    </li>
</ul>
<div class="todo-body">
{{input
type="text"
id="new-todo"
placeholder="what needs to be done?"
value=newTitle
action="createTodo"
}}
<footer>
  <section id="main">

          {{outlet}}
  <span id="todo-count">
    <strong>{{remaining}}</strong> {{inflection}} left
  </span>
  <button class="btn btn-danger" id="clear-completed" {{action "clearCompleted"}}>
    Clear Completed ({{completed}})
  </button>
  {{#if hasCompleted}}
    <button id="clear-completed" {{action "clearCompleted"}}>
      Clear Completed
    </button>
  {{/if}}
  </section>
</footer>
</div>
<section id="main">
  {{outlet}}
  <footer>
    <div class="row">
      <div class="col-md-7 col-md-offset-5">
      <span id="todo-count">
        <strong>{{remaining}}</strong> {{inflection}} Left<\br>
        <ul id="filters">
          <li>
            {{#link-to "todos.index" activeClass="selected"}}All{{/link-to}}
          </li>
          <li>
            {{#link-to "todos.active" activeClass="selected"}}Active{{/link-to}}
          </li>
          <li>
            {{#link-to "todos.completed" activeClass="selected"}}Completed{{/link-to}}
          </li>
        </ul><\br>
        <button class="btn btn-info btn-xs" id="clear-completed" {{action "clearCompleted"}}>
          Clear Completed Tasks
        </button>
        </span>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-6 info-note well">
        <h4>Notes:</h4>
        <p>
          Double click a todo to edit.
          Use All Active and Complete to filter through todos.
          Mark as completed with the check box!
        </p>
      </div>
    </div>
  </footer>
</section>
